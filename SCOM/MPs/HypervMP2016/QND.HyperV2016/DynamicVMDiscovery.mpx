        <DiscoveryTypes>
          <DiscoveryClass TypeID="Hyperv2016!Microsoft.Windows.HyperV.2016.VirtualMachine">
            <Property TypeID="QND.Hyperv.2016.VM" PropertyID="VirtualMachineId" />
            <Property TypeID="QND.Hyperv.2016.VM" PropertyID="VirtualMachineName" />
            <Property TypeID="QND.Hyperv.2016.VM" PropertyID="HostName" />
            <Property TypeID="QND.Hyperv.2016.VM" PropertyID="VMComputerName" />
          </DiscoveryClass>
